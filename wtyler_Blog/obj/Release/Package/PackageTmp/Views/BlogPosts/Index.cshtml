                        <li><a target="_blank" href="https://linkin.com/"><i class="fa fa-linkedin-square"></i></a></li>

                    </ul>
                </div>
                <!-- End Social -->
            </div>
            <!--Footer Info -->
            <div class="row footer-info mb-60">
                <div class="col-md-3 col-sm-12 col-xs-12 mb-sm-30">
                    <p class="mb-xs-0">.Net Developer looking to grow and help your company</p>
                    <a class="btn-link-a" href="http://wtyler-portfolio.azurewebsites.net/">Read More</a>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12 mb-sm-30 mb-xs-0">
                    <ul class="link">
                        <li><a href="http://wtyler-portfolio.azurewebsites.net/">Blog</a></li>
                        <li><a href="http://wtyler-portfolio.azurewebsites.net/">Portfolio</a></li>
                        <li><a href="http://wtyler-portfolio.azurewebsites.net/">Login & Signup</a></li>
                        <li><a href="http://wtyler-portfolio.azurewebsites.net/">About</a></li>

                    </ul>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12 mb-sm-30">
                    <ul class="link">
                        <li><a href="http://wtyler-portfolio.azurewebsites.net/">Contact Us</a></li>
                        <li><a href="http://wtyler-portfolio.azurewebsites.net/">Resume</a></li>
                        <li> <a href="http://wtyler-portfolio.azurewebsites.net/">Hire</a></li>
                        <li><a href="http://wtyler-portfolio.azurewebsites.net/">Home</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <p>1234 Richmond City rd Richmond,Va</p>
                    <ul class="link-small">
                        <li><a href="mailto:weltontylerii@gmail.com"><i class="fa fa-envelope-o left"></i>Email Me</a></li>
                        <li><a><i class="fa fa-phone left"></i>(434)000-0000</a></li>
                    </ul>
                </div>
            </div>
            <!-- End Footer Info -->
        </div>

        <hr />

        <!-- Copyright Bar -->
        <section class="copyright ptb-60">
            <div class="container">
                <p class="">
                    © 2016 <a><b>Tyler Studio</b></a>. All Rights Reserved.
                    <br />
                    <a target="_blank" href="@Url.Action("Index","Home")"><b></b></a>
                </p>
            </div>
        </section>
        <!-- End Copyright Bar -->

    </footer>
    <!-- END FOOTER -->
